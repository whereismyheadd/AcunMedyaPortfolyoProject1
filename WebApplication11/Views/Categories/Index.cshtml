@model List<WebApplication11.Models.TblCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>burası kategori sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Category Id</th>
                <th>Kategori ismi</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @*for while do while foreach*@

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td><a href="/categories/UpdateCategory/@item.CategoryID" class="btn btn-danger">Güncelle</a></td>
                    <td><a href="/categories/DeleteCategory/@item.CategoryID" class="btn btn-dark">Sil </a> </td>
                </tr>


            }



        </tbody>
    </table>
   <a href="/categories/CreateCategorY" class="btn btn-danger">Oluştur</a>
</div>
